
{
  "name": "smart-pocket-ai",
  "version": "1.0.0",
  "description": "SmartPocket AI - Trợ lý quản lý sản phẩm thông minh",
  "main": "main.js",
  "author": "SmartPocket Team",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder --win portable",
    "package": "electron-builder --dir"
  },
  "dependencies": {
    "lucide-react": "^0.561.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.smartpocket.ai",
    "productName": "SmartPocketAI",
    "directories": {
      "output": "dist_exe"
    },
    "win": {
      "target": "portable",
      "icon": "icon.ico",
      "publisherName": "SmartPocket AI"
    },
    "files": [
      "**/*",
      "!dist_exe/*"
    ]
  }
}
